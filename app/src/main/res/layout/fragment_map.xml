<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.map.MapFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_md"
        android:paddingTop="@dimen/spacing_sm"
        android:paddingEnd="@dimen/spacing_md"
        android:paddingBottom="@dimen/spacing_lg">

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_layout"
            style="@style/Widget.NanoMaps.TextInputLayout.Search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/search_hint"
            app:endIconDrawable="@drawable/ic_search"
            app:endIconMode="custom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Map Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/map_card"
            android:layout_width="0dp"
            android:layout_height="@dimen/map_height"
            android:layout_marginTop="@dimen/spacing_sm"
            app:cardCornerRadius="@dimen/corner_large"
            app:cardElevation="@dimen/elevation_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_layout"
            app:strokeWidth="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.osmdroid.views.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Layer Toggle Chips -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/layer_chip_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="@dimen/spacing_xs"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_street"
                        style="@style/Widget.NanoMaps.Chip.MapLayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/layer_street" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_satellite"
                        style="@style/Widget.NanoMaps.Chip.MapLayer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/layer_satellite" />

                </com.google.android.material.chip.ChipGroup>

                <!-- Direction Indicator -->
                <include
                    android:id="@+id/direction_indicator_include"
                    layout="@layout/include_direction_indicator" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Instructions Text -->
        <TextView
            android:id="@+id/map_instructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:gravity="center"
            android:text="@string/tap_drag_instruction"
            android:textAppearance="@style/TextAppearance.NanoMaps.Caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/map_card" />

        <!-- Location & Direction Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/info_card"
            style="@style/Widget.NanoMaps.Card.Info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/map_instructions">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_sm">

                <!-- Location Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:contentDescription="@string/location_label"
                        android:src="@drawable/ic_location_pin" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/location_label"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/location_not_selected"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    android:background="?attr/colorOutlineVariant" />

                <!-- Direction Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:contentDescription="@string/direction_label"
                        android:src="@drawable/ic_compass" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/direction_label"
                            android:textAppearance="?attr/textAppearanceLabelMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/direction_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/direction_not_set"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Custom Prompt Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/custom_prompt_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:hint="@string/custom_prompt_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_card">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/custom_prompt_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Generate Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/generate_button"
            style="@style/Widget.NanoMaps.Button.Generate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:enabled="false"
            android:text="@string/generate_button"
            app:icon="@drawable/ic_sparkle"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/custom_prompt_layout" />

        <!-- Requirement Hint Text -->
        <TextView
            android:id="@+id/requirement_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.NanoMaps.Caption"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/generate_button"
            tools:text="Set your API key in Settings" />

        <!-- Result Section Header -->
        <TextView
            android:id="@+id/result_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:text="@string/result_title"
            android:textAppearance="@style/TextAppearance.NanoMaps.SectionHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/requirement_hint" />

        <!-- Result Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/result_card"
            style="@style/Widget.NanoMaps.Card.Result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/result_image_min_height">

                    <!-- Placeholder -->
                    <LinearLayout
                        android:id="@+id/placeholder_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/result_image_min_height"
                        android:background="@drawable/bg_placeholder"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_lg">

                        <ImageView
                            android:layout_width="@dimen/icon_size_placeholder"
                            android:layout_height="@dimen/icon_size_placeholder"
                            android:alpha="0.4"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_image_size"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:gravity="center"
                            android:text="@string/placeholder_text"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Result Image -->
                    <ImageView
                        android:id="@+id/result_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/generated_image_desc"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />

                    <!-- Loading Overlay -->
                    <include
                        android:id="@+id/loading_overlay_include"
                        layout="@layout/include_loading_overlay" />

                </FrameLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:id="@+id/action_buttons_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorSurfaceContainerLow"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_xs"
                    android:visibility="gone">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/view_full_button"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="@dimen/spacing_lg"
                        android:contentDescription="@string/view_full"
                        app:icon="@drawable/ic_fullscreen"
                        app:iconSize="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_button"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/save_image"
                        app:icon="@drawable/ic_save"
                        app:iconSize="24dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
